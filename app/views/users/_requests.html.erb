<div class="requests"> 
	<h2> My Pear Requests <small> (<%= @requests.count %>) </small> </h2>
<% @requests.each do |request| %>
	<%= link_to(user_path(request.partner)) do %>
	<%= image_tag request.partner.avatar(:thumb) %>
	<!-- <h4><%#= request.partner.name %></h4> -->
	<% end %> 
	<p> <%= link_to "Confirm", pairing_confirm_path(pairing_id: request.id, partner_id: request.partner.id), method: :post %> </p>
<% end %>
<br>
</div>