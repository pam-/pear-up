<%= render 'info' %>

<% unless current_user == @partner || current_user.partners.include?(@partner) %>
	<%= link_to 'Wanna pear?', pairing_index_path(partner_id: @partner), method: :post  %>
<% else %>
	<% if current_user == @partner %>
		<% if @requests.any? %>
			<%= render 'requests' %>
		<% end %>	
		<% if current_user.partners.any? %>
			<%= render 'partners' %>
		<% end %>
	<% end %>
<% end %>