<% unless current_user == @partner %>
	<%= link_to 'Wanna pear?', pairing_index_path(partner_id: @partner), method: :post  %>   
<% else %>
	<% @pairings.each do |pairing| %>
		<%= link_to pairing.partner.avatar, user_path(pairing.partner) %>
		<%= link_to pairing.partner.name, pairing_confirm_path(pairing_id: pairing.id, partner_id: pairing.partner.id), method: :post %>
	<% end %>	
<% end %>