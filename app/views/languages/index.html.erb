<script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.2/mapbox.js'></script>
<section class="index">
	<aside>
		<form>
			<input type="text" placeholder="City, ST">
		</form>

		<h3> Filter by language: </h3>
		<ul>
			<% @languages.each do |language| %>
					<li class = "lang-button">
					<div id="<%= language.name.downcase.gsub(' ', '') %>"></div>
					<%= language.name.upcase %>
					</li>
			<% end %> 
		</ul>
	</aside>

	<div id="map"></div>

	<div id="coffee-shops"></div>

</section>
